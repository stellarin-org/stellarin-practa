{
  "name": "Letter to Me",
  "version": "1.0.12",
  "description": "Write heartfelt letters to your future self, delivered when the time is right",
  "author": "Woodenfox",
  "estimatedDuration": 120,
  "requiresAI": false,
  "configSchema": {
    "fields": {
      "mode": {
        "type": "select",
        "label": "Mode",
        "description": "Write a new letter or check for delivered letters",
        "default": "write",
        "options": [
          {
            "value": "write",
            "label": "Write a Letter"
          },
          {
            "value": "check",
            "label": "Check for Letters"
          }
        ]
      },
      "aiEnabled": {
        "type": "boolean",
        "label": "AI Enhanced",
        "description": "Enable AI-powered reflections",
        "default": true
      }
    }
  },
  "dependencies": [
    "@expo/vector-icons",
    "expo-haptics",
    "react-native-reanimated",
    "react-native-safe-area-context"
  ],
  "id": "letter-to-me",
  "type": "widget",
  "category": "wellness",
  "tags": [
    "reflection",
    "mindfulness",
    "journaling"
  ],
  "requiredPermissions": [],
  "assets": {
    "icon": "icon.png"
  }
}