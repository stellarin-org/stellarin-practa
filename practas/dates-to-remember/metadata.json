{
  "name": "Dates to Remember",
  "version": "2.0.7",
  "description": "Never forget an important date.",
  "author": "Mike Messenger",
  "requiresAI": false,
  "estimatedDuration": 30,
  "dependencies": [
    "@expo/vector-icons",
    "expo-contacts",
    "expo-haptics",
    "react-native-safe-area-context"
  ],
  "configSchema": {
    "fields": {
      "aiEnabled": {
        "type": "boolean",
        "label": "Enable AI Features",
        "description": "Allow this Practa to use AI-powered enhancements when available",
        "default": true
      },
      "openCondition": {
        "type": "select",
        "label": "When to Open",
        "description": "Only open this Practa when there is an upcoming event within the selected time window. Otherwise it will be skipped.",
        "options": [
          {
            "value": "always",
            "label": "Always"
          },
          {
            "value": "3days",
            "label": "Within 3 days"
          },
          {
            "value": "7days",
            "label": "Within 7 days"
          },
          {
            "value": "month",
            "label": "Within a month"
          }
        ],
        "default": "always"
      }
    },
    "requiredConfig": false
  },
  "id": "dates-to-remember",
  "type": "widget",
  "category": "memory",
  "tags": [
    "starter",
    "template"
  ],
  "requiredPermissions": [],
  "assets": {
    "icon": "remember-date.png"
  }
}